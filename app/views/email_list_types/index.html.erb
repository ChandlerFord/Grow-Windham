<p id="notice"><%= notice %></p>

<h1>Email List Types</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>List Type</th>
      <th>List Type Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @email_list_types.each do |email_list_type| %>
      <tr>
        <td><%= email_list_type.ListType %></td>
        <td><%= email_list_type.ListTypeDescription %></td>
        <td><%= link_to 'Show', email_list_type %></td>
        <% if can? :update, email_list_type%>
        <td><%= link_to 'Edit', edit_email_list_type_path(email_list_type) %></td>
        <% end %>
        <% if can? :destroy, email_list_type%>
        <td><%= link_to 'Remove', email_list_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Email list type', new_email_list_type_path, :class => "btn btn-add"%>
