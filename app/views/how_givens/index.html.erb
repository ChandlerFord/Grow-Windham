<p id="notice"><%= notice %></p>

<h1>How Given</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>How Given</th>
      <th>How Given Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @how_givens.each do |how_given| %>
      <tr>
        <td><%= how_given.HowGiven %></td>
        <td><%= how_given.HowGivenDescription %></td>
        <td><%= link_to 'Show', how_given %></td>
        <% if can? :update, how_given%>
        <td><%= link_to 'Edit', edit_how_given_path(how_given) %></td>
        <% end %>
        <% if can? :destroy, how_given%>
        <td><%= link_to 'Remove', how_given, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New How given', new_how_given_path, :class => "btn btn-add"%>
