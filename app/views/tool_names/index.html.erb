<p id="notice"><%= notice %></p>

<h1>Tool Names</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Tool Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tool_names.each do |tool_name| %>
      <tr>
        <td><%= tool_name.ToolName %></td>
        <td><%= tool_name.Description %></td>
        <td><%= link_to 'Show', tool_name %></td>
        <% if can? :update, tool_name%>
        <td><%= link_to 'Edit', edit_tool_name_path(tool_name) %></td>
        <% end %>
        <% if can? :destroy, tool_name%>
        <td><%= link_to 'Remove', tool_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Tool name', new_tool_name_path, :class => "btn btn-add"%>
