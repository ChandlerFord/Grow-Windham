<p id="notice"><%= notice %></p>

<h1>Listing Tool Names</h1>

<table>
  <thead>
    <tr>
      <th>Toolname</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tool_names.each do |tool_name| %>
      <tr>
        <td><%= tool_name.ToolName %></td>
        <td><%= tool_name.Description %></td>
        <td><%= link_to 'Show', tool_name %></td>
        <td><%= link_to 'Edit', edit_tool_name_path(tool_name) %></td>
        <td><%= link_to 'Destroy', tool_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

