<p id="notice"><%= notice %></p>

<h1>Programs</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Program Name</th>
      <th>Program Start Date</th>
      <th>Program End Date</th>
      <th>Program Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @programs.each do |program| %>
      <tr>
        <td><%= program.ProgramName %></td>
        <td><%= program.ProgramStartDate %></td>
        <td><%= program.ProgramEndDate %></td>
        <td><%= program.ProgramDescription %></td>
        <td><%= link_to 'Show', program %></td>
        <% if can? :update, program%>
        <td><%= link_to 'Edit', edit_program_path(program) %></td>
        <% end %>
        <% if can? :destroy, program%>
        <td><%= link_to 'Remove', program, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Program', new_program_path, :class => "btn btn-add"%>
