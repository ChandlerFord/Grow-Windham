<p id="notice"><%= notice %></p>

<h1>Primary Roles Within the Organization</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Primary Role</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organizational_primary_roles.each do |organizational_primary_role| %>
      <tr>
        <td><%= organizational_primary_role.PrimaryRole %></td>
        <td><%= organizational_primary_role.Description %></td>
        <td><%= link_to 'Show', organizational_primary_role %></td>
        <% if can? :update, organizational_primary_role%>
        <td><%= link_to 'Edit', edit_organizational_primary_role_path(organizational_primary_role) %></td>
        <% end %>
        <% if can? :destroy, organizational_primary_role%>
        <td><%= link_to 'Remove', organizational_primary_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Organizational primary role', new_organizational_primary_role_path, :class => "btn btn-add"%>
