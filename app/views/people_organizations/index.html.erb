<p id="notice"><%= notice %></p>

<h1>Listing People Organizations</h1>

<table>
  <thead>
    <tr>
      <th>Personal ID</th>
      <th>Organization Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people_organizations.each do |people_organization| %>
      <tr>
        <td><%= people_organization.PersonalID %></td>
        <td><%= people_organization.OrganizationName %></td>
        <td><%= link_to 'Show', people_organization %></td>
        <td><%= link_to 'Edit', edit_people_organization_path(people_organization) %></td>
        <td><%= link_to 'Remove', people_organization, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New People organization', new_people_organization_path, :class => "btn btn-add"%>
