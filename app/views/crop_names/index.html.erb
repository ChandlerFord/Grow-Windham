<p id="notice"><%= notice %></p>

<h1>Listing Crop Names</h1>

<table>
  <thead>
    <tr>
      <th>Cropname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crop_names.each do |crop_name| %>
      <tr>
        <td><%= crop_name.CropName %></td>
        <td><%= link_to 'Show', crop_name %></td>
        <td><%= link_to 'Edit', edit_crop_name_path(crop_name) %></td>
        <td><%= link_to 'Destroy', crop_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button type="button"><%= link_to 'New Crop name', new_crop_name_path %></button>


