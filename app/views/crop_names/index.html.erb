<p id="notice"><%= notice %></p>

<h1>Crop Names</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Crop Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crop_names.each do |crop_name| %>
      <tr>
        <td><%= crop_name.CropName %></td>
        <td><%= link_to 'Show', crop_name %></td>
        <% if can? :update, crop_name%>
        <td><%= link_to 'Edit', edit_crop_name_path(crop_name) %></td>
        <% end %>
        <% if can? :destroy, crop_name%>
        <td><%= link_to 'Remove', crop_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'New Crop name', new_crop_name_path, :class => "btn btn-add"%>


