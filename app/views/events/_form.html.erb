<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :EventName, "Event Name" %><br>
    <%= f.text_area :EventName %>
  </div>
  <div class="field">
    <%= f.label :EventDate, "Event Name" %><br>
    <%= f.date_select :EventDate %>
  </div>
  <div class="field">
    <%= f.label :EventStartTime, "Event Start Time" %><br>
    <%= f.time_select :EventStartTime %>
  </div>
  <div class="field">
    <%= f.label :EventHours, "Event Hours" %><br>
    <%= f.number_field :EventHours %>
  </div>
  <div class="field">
    <%= f.label :Eventlocation, "Event Location" %><br>
    <%= f.text_area :Eventlocation %>
  </div>
  <div class="field">
    <%= f.label :NumberAttended, "Number Attended" %><br>
    <%= f.number_field :NumberAttended %>
  </div>
  <div class="field">
    <%= f.label :ProgramName, "Program Name" %><br>
    <%= f.select :ProgramName, options_for_select(@programs.map{ |c| [c.ProgramName] }), {include_blank: true} %>
  </div>
  <div class="field">
    <%= f.label :ProgramStartDate, "Program Start Date" %><br>
    <%= f.date_select :ProgramStartDate %>
  </div>
  <div class="field">
    <%= f.label :GardenName, "Garden Name" %><br>
    <%= f.select :GardenName, options_for_select(@gardens.map{ |c| [c.GardenName] }), {include_blank: true} %>
  </div>
  <div class="field">
    <%= f.label :EventType, "Event Type" %><br>
    <%= f.select :EventType, options_for_select(@event_types.map{ |c| [c.EventType] }), {include_blank: true} %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
