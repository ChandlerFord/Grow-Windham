<p id="notice"><%= notice %></p>

<h1>Events</h1>



<div id="daterange">
  <%= form_tag events_path, method: :get do %>
    <p>Search for events between:
    <%= text_field_tag 'search[date_from]', @search.date_from %>
    and
    <%= text_field_tag 'search[date_to]', @search.date_to %>
    <%= submit_tag 'Search', :class => "btn btn-add"%>
    <%=link_to 'Reset', events_url, :class => "btn btn-download"%>
    </p>
  <% end %>
</div>

<div class="table-responsive">
  
<table>
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Event Date</th>
      <th>Event Start Time</th>
      <th>Event Hours</th>
      <th>Event Location</th>
      <th>Number Attended</th>
      <th>Program Name</th>
      <th>Program Start Date</th>
      <th>Garden Name</th>
      <th>Event Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody width="100%";>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.EventName %></td>
        <td><%= event.EventDate %></td>
        <td><%= event.EventStartTime %></td>
        <td><%= event.EventHours %></td>
        <td><%= event.Eventlocation %></td>
        <td><%= event.NumberAttended %></td>
        <td><%= event.ProgramName %></td>
        <td><%= event.ProgramStartDate %></td>
        <td><%= event.GardenName %></td>
        <td><%= event.EventType %></td>
        <td><%= link_to 'Show', event %></td>
        <% if can? :update, event%>
        <td><%= link_to 'Edit', edit_event_path(event) %></td>
        <% end %>
        <% if can? :destroy, event%>
        <td><%= link_to 'Remove', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Event', new_event_path, :class => "btn btn-add"%>
