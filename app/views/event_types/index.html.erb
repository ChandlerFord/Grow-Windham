<p id="notice"><%= notice %></p>

<h1>Event Types</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Event Type</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_types.each do |event_type| %>
      <tr>
        <td><%= event_type.EventType %></td>
        <td><%= event_type.Description %></td>
        <td><%= link_to 'Show', event_type %></td>
        <% if can? :update, event_type%>
        <td><%= link_to 'Edit', edit_event_type_path(event_type) %></td>
        <% end %>
        <% if can? :destroy, event_type%>
        <td><%= link_to 'Remove', event_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Event type', new_event_type_path, :class => "btn btn-add"%>
