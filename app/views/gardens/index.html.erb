<p id="notice"><%= notice %></p>

<h1>Gardens</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Garden Name</th>
      <th>Garden Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gardens.each do |garden| %>
      <tr>
        <td><%= garden.GardenName %></td>
        <td><%= garden.GardenLocation %></td>
        <td><%= link_to 'Show', garden %></td>
        <% if can? :update, garden%>
        <td><%= link_to 'Edit', edit_garden_path(garden) %></td>
        <% end %>
        <% if can? :destroy, garden%>
        <td><%= link_to 'Remove', garden, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Garden', new_garden_path, :class => "btn btn-add"%>

