<p id="notice"><%= notice %></p>

<h1>Types of Organizations</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Organization Type</th>
      <th>Organization Type Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @organization_types.each do |organization_type| %>
      <tr>
        <td><%= organization_type.OrganizationType %></td>
        <td><%= organization_type.OrganizationTypeDescription %></td>
        <td><%= link_to 'Show', organization_type %></td>
        <% if can? :update, organization_type%>
        <td><%= link_to 'Edit', edit_organization_type_path(organization_type) %></td>
        <% end %>
        <% if can? :destroy, organization_type%>
        <td><%= link_to 'Remove', organization_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Organization type', new_organization_type_path, :class => "btn btn-add"%>
