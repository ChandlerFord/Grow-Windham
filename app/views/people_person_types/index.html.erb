<p id="notice"><%= notice %></p>

<h1>Types of People</h1>

<div class="table-responsive">

<table>
  <thead>
    <tr>
      <th>Personal ID</th>
      <th>Person Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people_person_types.each do |people_person_type| %>
      <tr>
        <td><%= people_person_type.PersonalID %></td>
        <td><%= people_person_type.PersonType %></td>
        <td><%= link_to 'Show', people_person_type %></td>
        <% if can? :update, people_person_type%>
        <td><%= link_to 'Edit', edit_people_person_type_path(people_person_type) %></td>
        <% end %>
        <% if can? :destroy, people_person_type%>
        <td><%= link_to 'Remove', people_person_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New People person type', new_people_person_type_path, :class => "btn btn-add"%>
